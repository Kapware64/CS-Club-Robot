import random
import re

WORDS = ["MEANING", "OF", "LIFE"]                                               //input to listen for

def handle(text, mic, profile):                                                 //executes when input is heard
    messages = ["It's 42, you idiot.",                                          //messages to say
                "It's 42. How many times do I have to tell you?"]

    message = random.choice(messages)                                           //choose message to say at random

    mic.say(message)                                                            //make robot say message

def isValid(text):                                                              //executes when user says something (speech stored in [text])
    return bool(re.search(r'\bmeaning of life\b', text, re.IGNORECASE))         //return whether user's speech passes as valid input
